<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <context:property-placeholder location="conf/dev/me.conf"/>

    <bean id="mailerConfig" class="cloudify.widget.mailer.MailerConfig">
        <property name="authenticator">
            <bean class="org.apache.commons.mail.DefaultAuthenticator">
                <constructor-arg index="0" value="${mailer.config.username}"/>
                <constructor-arg index="1" value="${mailer.config.password}"/>
            </bean>
        </property>
        <property name="hostName" value="${mailer.config.hostname}"/>
        <property name="smtpPort" value="${mailer.config.smtpPort:587}"/>
        <property name="tlsEnabled" value="${mailer.config.tlsEnabled:true}"/>
        <property name="from" value="${mailer.config.username}"/>
    </bean>

    <bean id="failingMailerConfig" class="cloudify.widget.mailer.MailerConfig">
        <property name="authenticator">
            <bean class="org.apache.commons.mail.DefaultAuthenticator">
                <constructor-arg index="0" value="${mailer.config.username}"/>
                <constructor-arg index="1" value="${mailer.config.password}"/>
            </bean>
        </property>
        <property name="hostName" value="${mailer.config.failingHostname}"/>
        <property name="smtpPort" value="${mailer.config.smtpPort:587}"/>
        <property name="tlsEnabled" value="${mailer.config.tlsEnabled:true}"/>
        <property name="from" value="${mailer.config.username}"/>
    </bean>

    <bean id="mailer" class="cloudify.widget.mailer.Mailer">
        <property name="mailerConfig" ref="mailerConfig"/>
    </bean>

    <bean id="failingMailer" class="cloudify.widget.mailer.Mailer">
        <property name="mailerConfig" ref="failingMailerConfig"/>
    </bean>

    <bean id="gmailAuthenticator" class="org.apache.commons.mail.DefaultAuthenticator">
        <constructor-arg name="userName" value="${mailer.auth.userName}" />
        <constructor-arg name="password" value="${mailer.auth.password}" />
    </bean>

    <!--<bean id="mailerConfig" class="cloudify.widget.mailer.MailerConfig">-->
        <!--<property name="smtpPort" value="${mailer.conf.smtpPort}" />-->
        <!--<property name="hostName" value="${mailer.conf.hostName}" />-->
        <!--<property name="tlsEnabled" value="${mailer.conf.tlsEnabled}" />-->
        <!--<property name="authenticator" ref="gmailAuthenticator" />-->
    <!--</bean>-->

    <bean id="mailBuilder" class="cloudify.widget.mailer.Mail$MailBuilder">
        <constructor-arg name="from" value="${mailer.mail.from}" />
        <constructor-arg name="to">
            <list>
                <value>${mailer.mail.to1}</value>
            </list>
        </constructor-arg>
        <constructor-arg name="subject" value="testing... testing..." />
    </bean>

</beans>