<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/mvc  http://www.springframework.org/schema/mvc/spring-mvc.xsd
       ">

    <import resource="classpath:/conf/dev/dev-context.xml"/>

    <mvc:annotation-driven/>
    <context:component-scan base-package="cloudify.widget.website.controller" />


    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/admin/**"/>
            <bean class="cloudify.widget.website.interceptors.AdminAuthenticationInterceptor" >
            </bean>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <bean class="cloudify.widget.website.interceptors.AuthenticationInterceptor" >
            </bean>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <bean class="cloudify.widget.website.interceptors.ExceptionInterceptor" >
            </bean>
        </mvc:interceptor>

    </mvc:interceptors>

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="#{conf.jdbcDriverClassName}"/>
        <property name="url" value="#{conf.jdbcUrl}"/>
        <property name="username" value="#{conf.jdbcUsername}"/>
        <property name="password" value="#{conf.jdbcPassword}"/>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"></property>
    </bean>

    <bean id="accountDao" class="cloudify.widget.website.dao.AccountDaoImpl">
        <property name="jdbcTemplate" ref="jdbcTemplate"></property>
    </bean>

    <bean id="poolDao" class="cloudify.widget.website.dao.PoolDaoImpl">
        <property name="jdbcTemplate" ref="jdbcTemplate"></property>
    </bean>


    <!-- pool manager context -->

    <bean id="managerSettingsLoader" class="cloudify.widget.pool.manager.ManagerSettingsFileLoader">
        <property name="managerSettingsFilePath" value="conf/dev/manager-settings.json" />
    </bean>

    <bean id="managerSettingsHandler" class="cloudify.widget.pool.manager.ManagerSettingsJsonHandler">
        <property name="managerSettingsFileLoader" ref="managerSettingsLoader" />
    </bean>

    <bean id="managerPoolDao" class="cloudify.widget.pool.manager.PoolDao">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="manager" class="cloudify.widget.pool.manager.PoolManager">
        <property name="poolDao" ref="managerPoolDao" />
        <property name="managerSettingsHandler" ref="managerSettingsHandler" />
    </bean>



</beans>