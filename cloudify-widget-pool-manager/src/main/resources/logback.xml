<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
     ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%-20d{dd MMM yyyy HH:mm:ss.SSS} [%-6thread] %-5level %-20logger{20} - %msg%n</pattern>
        </encoder>
    </appender>


    <logger name="cloudify.widget.pool.manager.node_management.CreateNodeManagementModule" level="DEBUG"/>

    <root level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </root>


</configuration>
