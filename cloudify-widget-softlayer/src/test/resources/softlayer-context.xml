<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="cloudify.widget.softlayer" />

    <context:property-placeholder location="conf/dev/me.conf"/>

    <bean id="softlayerCloudCredentials" class="cloudify.widget.softlayer.SoftlayerCloudCredentials">
        <constructor-arg index="0" value="${softlayer_user}"/>
        <constructor-arg index="1" value="${softlayer_api_key}"/>
    </bean>
</beans>